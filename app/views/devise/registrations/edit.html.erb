<div class="containerall">
<%= render 'layouts/header' %>
<%= render 'layouts/topbar' %>
  <div class="row">
    <div class="contentlogin">
      <div class="large-2 small-12 columns">
      <p><%= button_to "Verwijder mijn account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button ala2" %>
      <%= link_to "Terug", :back, :class => 'button ala1' %>
    </div>
      <div class="columns large-10">
        <div class="inputpart">
              <h2>Wijzig <%= resource_name.to_s.humanize %></h2>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= devise_error_messages! %>

                <div class="field">
                  <%= f.text_field :username, autofocus: true, placeholder: "Gebruikersnaam", :class => "formfield", :style => "width: 300px;" %>
                </div>
                <div class="field">
                  <%= f.email_field :email, autofocus: true, placeholder: "E-mail", :class => "formfield", :style => "width: 300px;" %>
                </div>
              <br>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Wacht momenteel op bevestiging van: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="field">
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Nieuw wachtwoord", :class => "formfield", :style => "width: 300px;" %>
                </div>

                <div class="field">
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Bevestig uw nieuw wachtwoord", :class => "formfield", :style => "width: 300px;" %>
                </div>
              <br>
                <div class="field">
                <i>Voer uw huidige wachtwoord in ter bevestiging</i><br />
                  <%= f.password_field :current_password, autocomplete: "off", placeholder: "Huidig wachtwoord", :class => "formfield", :style => "width: 300px;" %>
                </div>
                <br>
                <div class="actions">
                  <%= f.submit "Update", :class => "button ala1" %>
                </div>
              <% end %>


              </div>


</div>
</div>
</div>
</div>

<%= render 'layouts/footerforms' %>
