<%= render 'layouts/header' %>

<div class="sidebarL">
  <div class="linksidebar">
    <p><%= button_to "Verwijder mijn account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button ala2" %></p>
    <%= link_to "Terug", :back, :class => 'button ala1' %>
  </div>
</div>
<div class="contentlogin">
  <h2>Wijzig <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :username, autofocus: true, placeholder: "Gebruikersnaam", :class => "formfield" %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail", :class => "formfield" %>
  </div>
<br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Wacht momenteel op bevestiging van: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Nieuw wachtwoord", :class => "formfield" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Bevestig uw nieuw wachtwoord", :class => "formfield" %>
  </div>
<br>
  <div class="field">
  <i>Voer uw huidige wachtwoord in ter bevestiging</i><br />
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Huidig wachtwoord", :class => "formfield" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => "button ala1" %>
  </div>
<% end %>


</div>


<div class="sidebar">
</div>
<%= render 'layouts/footerforms' %>
