</div>
<div class="contentlogin">
<h2>Registratie</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :username, autofocus: true, placeholder: 'Gebruikersnaam',:class => "formfield" %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'E-mail',:class => "formfield" %>
  </div>
  <br>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Wachtwoord", :class => "formfield" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Bevestig uw wachtwoord", :class => "formfield" %>
  </div>


  <div class="actions">
    <%= f.submit "Registreer", :class => "button ala1" %>
  </div>
<% end %>
</div>


