

<div class="containerall">
  <%= render 'layouts/header' %>
  <%= render 'layouts/topbar' %>
  <div class="row">
  <div class="contentlogin">
    <div class="columns large-12">
        <div class="inputpart">
      <h2>LOG IN</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.text_field :login, autofocus: true, placeholder: 'Gebruikersnaam', :class => "formfield", :style => "width: 300px;" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Wachtwoord', :class => "formfield",  :style => "width: 300px;" %>

        <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Inloggen", :class => "button ala1" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
            <%= image_tag("logos/logologin.png") %>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<%= render 'layouts/footerforms' %>
