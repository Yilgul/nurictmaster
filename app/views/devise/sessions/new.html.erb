<%= render 'layouts/header' %>

<div class="sidebarL">
<div class="linksidebar">
  <%= render "devise/shared/links" %>
  </div>
</div>

<div class="contentlogin">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :login, autofocus: true, placeholder: 'Gebruikersnaam', :class => "formfield" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Wachtwoord', :class => "formfield" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Inloggen", :class => "button ala1" %>
  </div>
<% end %>
</div>

